<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport"              content="width=device-width, initial-scale=1.0" />

<title><%= meta_tag_page_title %></title>
<meta name="description"           content="<%= meta_tag_description %>" />

<!-- Geocoding -->
<meta name="geo.placename"         content="France" />

<!-- Microdata -->
<meta name="name"              content="<%= meta_tag_title %>" />
<meta name="description"       content="<%= meta_tag_description %>" />
<meta name="image"             content="<%= meta_tag_image %>" />

<!-- Facebook Open Graph data -->
<meta name="og:site_name"      content="<%= meta_tag_site_name %>" />
<meta name="og:title"          content="<%= meta_tag_title %>" />
<meta name="og:description"    content="<%= meta_tag_description %>" />
<meta name="og:image"          content="<%= meta_tag_image %>" />
<meta name="og:type"           content="website" />
<meta name="og:url"            content="<%= meta_tag_url %>" />

<!-- Google+ -->
<meta name="name"              content="<%= meta_tag_title %>" />
<meta name="description"       content="<%= meta_tag_description %>" />
<meta name="image"             content="<%= meta_tag_image %>" />

<!-- Twitter Card data -->
<meta name="twitter:card"          content="summary_large_image" />
<meta name="twitter:site"          content="<%= meta_tag_twitter %>" />
<meta name="twitter:title"         content="<%= meta_tag_title %>" />
<meta name="twitter:description"   content="<%= meta_tag_description %>" />
<meta name="twitter:image"         content="<%= meta_tag_image %>" />